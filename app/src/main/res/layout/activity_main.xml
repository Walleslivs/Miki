<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:weightSum="10"
        tools:context=".MainActivity">





        <GridLayout
            android:id="@+id/ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:rowCount="8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textGrid">


            <ImageButton
                android:id="@+id/katt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                app:srcCompat="@drawable/katt" />

            <ImageButton
                android:id="@+id/ko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                app:srcCompat="@drawable/ko" />

            <ImageButton
                android:id="@+id/asna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                app:srcCompat="@drawable/asna" />

            <ImageButton
                android:id="@+id/elefant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                app:srcCompat="@drawable/elefant" />

            <ImageButton
                android:id="@+id/lejon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                app:srcCompat="@drawable/lejon" />

            <ImageButton
                android:id="@+id/pingvin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                app:srcCompat="@drawable/pingvin" />

            <ImageButton
                android:id="@+id/isbjorn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="6"
                app:srcCompat="@drawable/isbjorn" />

            <ImageButton
                android:id="@+id/sal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                app:srcCompat="@drawable/sal" />

            <ImageButton
                android:id="@+id/gris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                app:srcCompat="@drawable/gris" />

            <ImageButton
                android:id="@+id/baver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                app:srcCompat="@drawable/baver" />

            <ImageButton
                android:id="@+id/kyckling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                app:srcCompat="@drawable/kyckling" />

            <ImageButton
                android:id="@+id/hund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                app:srcCompat="@drawable/hund" />

            <ImageButton
                android:id="@+id/anka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                app:srcCompat="@drawable/anka" />

            <ImageButton
                android:id="@+id/hona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                app:srcCompat="@drawable/hona" />

            <ImageButton
                android:id="@+id/apa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                app:srcCompat="@drawable/apa" />

            <ImageButton
                android:id="@+id/zebra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="7"
                app:srcCompat="@drawable/zebra" />

        </GridLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>